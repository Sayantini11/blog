<h2> Categories (<%= @categories.length %>)</h2>
<ol>
	<% @categories.each do |category| %>
	<li>
		<%= link_to category.name, category_path(category.id) %> (<%= category.articles.length %>)
	</li>
	<% end %>
</ol> 
<% if (user_signed_in?) && (can? :update, @article) %>
<%= link_to "Add Category", new_category_path %>
<% end %>
